<h3>Vista de Productos</h3>

  <% if(tieneProd) { %>
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody>
            <% lprod.forEach(item=> { %>
            <tr>
            <th scope="row"></th>
                <td> <%= item.title %> </td>
                <td> <%= item.price %> </td>
                <td style="width: 20%;">
                    <img src="<%= item.thumbnail  %>" class='icon-user icon-white' style="width: 20%;"></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <h1> No hay productos </h1>
<% } %>
